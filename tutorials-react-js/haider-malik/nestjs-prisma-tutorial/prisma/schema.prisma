generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum Role {
  USER
  ADMIN
  SUPER_ADMIN
  SUB_ADMIN
  MANAGER
  CONTRIBUTOR
}

model User {
  id        Int       @id @default(autoincrement())
  firstName String?
  lastName  String?
  email     String    @unique
  password  String
  blocked   Boolean?
  role      Role @default(USER)
  createdAt DateTime  @default(now())
}

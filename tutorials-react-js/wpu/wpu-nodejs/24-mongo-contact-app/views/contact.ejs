<div class="mt-5">
  <div class="row">
    <div class="col-md-8">
      <h2>Daftar Contact</h2>

      <a href="/contact/add" class="btn btn-primary my-2">Tambah Contact</a>

      <% if (msg.length !== 0) { %>
        <div class="alert alert-success" role="alert">
          <%= msg %>
        </div>
      <% } %>

      <table class="table">
        <thead>
          <tr>
            <th scope="col">#</th>
            <th scope="col">Nama</th>
            <th scope="col">No HP</th>
            <th scope="col">Aksi</th>
          </tr>
        </thead>
        <tbody>
          <% if (contacts.length > 0) { %>
            <% contacts.forEach((contact, index) => { %>  
              <tr>
                <th scope="row"><%= index + 1 %></th>
                <td><%= contact.nama %></td>
                <td><%= contact.noHP %></td>
                <td>
                  <a
                    href="/contact/<%= contact.nama %>"
                    class="btn btn-success badge rounded-pill px-3"
                    ><i class="bi bi-info-circle"></i> detail</i
                  ></a>
                </td>
              </tr>
            <% }) %>
          <% } else {%>
            <tr>
              <td colspan="4">
                <div class="alert alert-danger text-center" role="alert">
                  Empty Data
                </div>
              </td>
            </tr>
          <% } %>
        </tbody>
      </table>
    </div>
  </div>
</div>


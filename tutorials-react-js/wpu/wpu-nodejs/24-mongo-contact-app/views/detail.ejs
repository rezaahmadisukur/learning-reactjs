<div class="mt-5">
  <div class="row">
    <div class="col-md-8">
      <h1>Detail Contact</h1>
      <% if (!contact) { %>
      <div class="alert alert-danger fw-bold d-flex flex-column" role="alert">
        Data contact tidak ada !!!
        <a href="/contact" class="alert-link fw-normal"
          >&laquo; back to list contact</a
        >
      </div>
      <% } else {%>
      <div class="card" style="width: 18rem">
        <div class="card-body">
          <h5 class="card-title"><%= contact.nama %></h5>
          <h6 class="card-subtitle mb-2 text-body-secondary">
            <%= contact.noHP %>
          </h6>
          <p class="card-text"><%= contact.email %></p>
          <a href="/contact/edit/<%= contact.nama %>" class="btn btn-info badge"
            >Ubah
          </a>
          <!-- <a
            href="/contact/delete/<%= contact.nama %>"
            class="btn btn-danger badge"
            onclick="return confirm('Yakin mau dihapus ?')"
            >hapus
          </a> -->
          <form action="/contact?_method=DELETE" method="post" class="d-inline">
            <input type="hidden" name="nama" value="<%= contact.nama %>" />
            <button
              type="submit"
              class="btn btn-danger badge"
              onclick="return confirm('Yakin mau dihapus ?')"
            >
              hapus
            </button>
          </form>
          <a href="/contact" class="card-link d-block mt-3"
            >&laquo; back to list contact</a
          >
        </div>
      </div>
      <% } %>
    </div>
  </div>
</div>
